    "playwright-chromium": "^1.57.0",
    "prettier": "^3.7.3",
    "prettier-plugin-slidev": "^1.0.5",
    "vite": "^7.2.6"
  },
  "dependencies": {
    "@slidev/cli": "^52.10.1",
    "@slidev/theme-default": "latest",
    "@slidev/theme-seriph": "latest",
    "slidev-theme-neversink": "^0.4.0",
    "vue": "^3.5.26"
  }
}
