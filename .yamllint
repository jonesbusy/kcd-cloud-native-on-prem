extends: default

rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  document-end: disable
  document-start: disable
  line-length: disable
  comments:
    min-spaces-from-content: 1
  comments-indentation: disable
  truthy: disable
